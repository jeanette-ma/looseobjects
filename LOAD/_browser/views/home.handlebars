<div class="container-fluid">
    <div class="row">
        <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block sidebar collapse">
            <div class="position-sticky pt-3 sidebar-sticky">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active text-white" aria-current="page" href="#">
                            <span data-feather="home" class="align-text-bottom"></span>
                            Model Parameters <span class="badge text-bg-warning">Extension</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active text-white" aria-current="page" href="#">
                            <span data-feather="home" class="align-text-bottom"></span>
                            Confirmed/Rejected Listings <span class="badge text-bg-warning">Extension</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active text-white" aria-current="page" href="#">
                            <span data-feather="home" class="align-text-bottom"></span>
                            Retraining <span class="badge text-bg-warning">Extension</span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <main id="events" class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div
                class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">New Sound Events</h1>
            </div>

            <select class="form-select" id="events-select" multiple>
            </select>
            <div class="d-flex justify-content-end">
                <button type="submit" class="mt-3 btn btn-outline-success" disabled="true">Confirm Selected</button>
            </div>
            <div id="graph"></div>

            <div
                class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Recording Event Information</h1>
            </div>
            <div>
                <audio controls>
                    <source src="./sample/recording_02.mp3" type="audio/mpeg">
                </audio>
                <div class="table-responsive">
                    <table id="info" class="table table-striped table-sm">
                        <tr>
                            <th scope="row">Wind Farm</th>
                            <td>-</td>
                        </tr>
                        <tr>
                            <th scope="row">Turbine</th>
                            <td>-</td>
                        </tr>
                        <tr>
                            <th scope="row">Date and Time</th>
                            <td>-</td>
                        </tr>
                        <tr>
                            <th scope="row">Duration (seconds)</th>
                            <td>-</td>
                        </tr>
                        <tr>
                            <th scope="row">Classified as</th>
                            <td>-</td>
                        </tr>
                        <tr>
                            <th scope="row">Accuracy of Classfication (%)</th>
                            <td>-</td>
                        </tr>
                    </table>
                </div>
                <form action="./updateUserDecision" method="post">
                    <input type="hidden" id="eventId" name="eventId" value="">
                    <button name="decision" type="submit" class="process btn btn-outline-success" value="1" disabled="true">Confirm</button>
                    <button name="decision" type="submit" class="process btn btn-outline-danger" value="0" disabled="true">Reject</button>
                </form>
            </div>
        </main>
    </div>
</div>